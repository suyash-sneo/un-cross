<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_frag_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchFragment">

    <EditText
        android:id="@+id/search_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingTop="55dp"
        android:paddingBottom="75dp"
        android:textSize="32sp"
        android:textAlignment="center"
        android:singleLine="true"
        android:hint="@string/search_edit_text_hint"
        android:textColor="@android:color/white"
        android:inputType="textVisiblePassword"
        android:textStyle="bold"
        android:background="@color/samosan"
        android:cursorVisible="false"
        android:text="@string/search_edit_text_default"
        />

    <LinearLayout
        android:id="@+id/tab_content_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <FrameLayout
            android:id="@+id/vocab_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/samosan"
            >
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tl_vocab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMode="fixed"
                android:background="@drawable/meaning_frame_bg"
                >
            </com.google.android.material.tabs.TabLayout>
        </FrameLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/view_pager"/>
    </LinearLayout>

</LinearLayout>